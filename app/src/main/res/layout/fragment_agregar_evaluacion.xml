<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".agregarEvaluacion"
           >
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:gravity="center_horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorAccent"
                    android:id="@+id/imagec"
                    android:layout_margin="10dp" android:src="@drawable/addpic"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/textInputLayout2" app:layout_constraintVertical_bias="0.3"
                    android:background="@drawable/redondear" android:layout_margin="16dp">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fecha" android:fontFamily="@font/roboto"
                        android:textColor="@color/primaryText" android:textColorHint="@color/colorAccent"
                        android:textColorLink="@color/colorAccent" android:id="@+id/inputfecha" android:maxLines="1"
                        android:inputType="date" android:imeOptions="actionNext" android:focusable="false"
                        android:gravity="center_horizontal"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                    android:text="@string/estatura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView14"
                    android:gravity="center_horizontal"
                    android:textColor="@color/secondaryText" android:fontFamily="@font/roboto"/>
            <NumberPicker android:layout_width="match_parent" android:layout_height="62dp"
                          android:id="@+id/picker5"
                          android:layout_marginTop="16dp"
                          android:layout_marginBottom="16dp"
                          android:layout_marginLeft="30dp"
                          android:layout_marginRight="30dp"
                          android:background="@drawable/redondear">

            </NumberPicker>
            <TextView
                    android:text="@string/peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView10"
                    android:gravity="center_horizontal"
                    android:textColor="@color/secondaryText" android:fontFamily="@font/roboto"/>
            <NumberPicker android:layout_width="match_parent" android:layout_height="62dp"
                          android:id="@+id/picker2"
                          android:layout_marginTop="16dp"
                          android:layout_marginBottom="16dp"
                          android:layout_marginLeft="30dp"
                          android:layout_marginRight="30dp"
                          android:background="@drawable/redondear">

            </NumberPicker>
            <TextView
                    android:text="@string/grasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView12"
                    android:gravity="center_horizontal"
                    android:textColor="@color/secondaryText" android:fontFamily="@font/roboto"/>
            <NumberPicker android:layout_width="match_parent" android:layout_height="62dp"
                          android:id="@+id/picker4"
                          android:layout_marginTop="16dp"
                          android:layout_marginBottom="16dp"
                          android:layout_marginLeft="30dp"
                          android:layout_marginRight="30dp"
                          android:background="@drawable/redondear">

            </NumberPicker>
            <TextView
                    android:text="@string/medidacintura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11"
                    android:gravity="center_horizontal"
                    android:textColor="@color/secondaryText" android:fontFamily="@font/roboto"/>
            <NumberPicker android:layout_width="match_parent" android:layout_height="62dp"
                          android:id="@+id/picker3"
                          android:layout_marginTop="16dp"
                          android:layout_marginBottom="16dp"
                          android:layout_marginLeft="30dp"
                          android:layout_marginRight="30dp"
                          android:background="@drawable/redondear">

            </NumberPicker>
            <ImageView
                    android:layout_width="278dp"
                    android:layout_height="10dp" app:srcCompat="@drawable/separador"
                    android:id="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="30dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/descripcionSeparador"
                    android:layout_gravity="center_horizontal" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView9" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/IDFragmentAdd"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@drawable/redondear"
                    android:layout_margin="16dp" android:focusable="false">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/indice" android:textColorHint="@color/colorAccent"
                        android:textColor="@color/primaryText" android:fontFamily="@font/roboto"
                        android:gravity="center_horizontal" android:focusable="false" android:maxLines="1"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@drawable/redondear"
                    android:layout_margin="16dp" android:focusable="false">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/imc" android:textColorHint="@color/colorAccent"
                        android:textColor="@color/primaryText" android:fontFamily="@font/roboto"
                        android:gravity="center_horizontal" android:focusable="false" android:maxLines="1"
                        android:id="@+id/idIMC"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:text="@string/agregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button4"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.0"
                    android:background="@color/colorPrimary" android:textColor="@color/textIcons"
                    android:fontFamily="@font/roboto"/>
            <ImageView
                    android:layout_width="278dp"
                    android:layout_height="10dp" app:srcCompat="@drawable/separador"
                    android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="30dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/descripcionSeparador"
                    android:layout_gravity="center_horizontal" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView9" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/IDFragmentAdd"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>